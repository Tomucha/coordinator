<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="RootTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Large</item>
    </style>

    <style name="AppTheme" parent="@style/RootTheme">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="EventActivityTheme" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse</item>
        <item name="android:actionBarStyle">@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="RegisterPageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="RegisterPageTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#09c</item>
<!--
        <item name="android:fontFamily">sans-serif-thin</item>
-->
    </style>

    <style name="RegisterFormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

</resources>