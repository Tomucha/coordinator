<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="RootTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Large</item>
	</style>
    
    <style name="AppTheme" parent="@style/RootTheme">
	</style>
	
    <style name="RegistrationPageTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#09c</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
	
    <style name="FormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
	
</resources>