        <poi_category id="poiPsycho" name="Psychologická první pomoc" icon="obrazek.png"  workflow_id="wkfl_prace">
            Psychologická první pomoc
        </poi_category>
        
        <poi_category id="poiPrace" name="Práce" icon="obrazek.png" workflow_id="wkfl_prace">
            Úkoly pro dobrovolníky
        </poi_category>
        
        <poi_category id="general" name="POI" icon="obrazek.png" important="true">
